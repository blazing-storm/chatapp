<header id="layout-header">
    <nav class="navbar-items">
        <div class="navbar-link">
            <a href="/">
                <i class="fa-regular fa-message"></i>
                ChatApp 
            </a>
        </div>
    </nav>

    <nav class="navbar-items navbar-items-right">
        <% if(locals.user) { %>
            <div class="navbar-link">
                <img src="<%= user.avatar %>" alt="<%= user.name %>"
                size="23" width="23" height="23"
                class="avatar circle">
                <%= user.name %>
            </div>

            <div class="navbar-link">
                <a href="/users/sign-out"> Signout </a>
            </div>
        <% } else { %>
            <div id="nav-sign-in" class="navbar-link">
                <a href="/users/sign-in"> Signin </a>
            </div>

            <div id="nav-sign-up" class="navbar-link">
                <a href="/users/sign-up"> Signup </a>
            </div>
        <% } %>
    </nav>
</header>